<div class="col-lg-6 col-lg-offset-3">
  <div class="form-horizontal" role="form">
    <%= form_for @user, url: user_path(@user.id) do |f| %>
      <div class="panel panel-sub-green">
        <div class="panel-heading">
          <h2 class="panel-title">
            お店の選択
          </h2>
        </div>
  ​
        <div class="panel-body">
          <fieldset>

            <% if user_signed_in? %>
              <%= f.hidden_field :user_id, value: current_user.id %>
            <% end %>

            <div class="form-group">
              <%= f.label "お店", class: :"col-sm-3 control-label" %>
              <div class="col-sm-7">
                <%= f.collection_select :store_id, @stores, :id, :name, {}, {class: :"form-control"}  %>
              </div>
            </div>
  ​
            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-10">
                <%= f.submit class: "btn btn-sub-green", value: "送信" %>
              </div>
            </div>
  ​
          </fieldset>
        </div>
      </div>
    <% end %>
  </div>
</div>
