<div class="col-md-9 col-xs-12 col-md-push-3">
  <div class="panel panel-green">
    <div class="panel-heading">
      <h3 class="panel-title">
        ユーザー名：<%= @user.name %>
      </h3>
    </div>
    <div class="panel-body">
      <h4>
        所属店
      </h4>
      <% if @store %>
        <h3>
          <%= @store.name %>
        </h3>

        <% unless @store.image.file.nil? %>
          <%= image_tag @store.image.thumb.url, class: 'thumbnail' %>
        <% else %>
          <%= image_tag "/none.png", class: 'thumbnail' %>
        <% end %>

      <% else %>
        <h3 class="text-danger">
          所属していません
        </h3>
        <% if current_user == @user %>
          <%= link_to "お店を新規登録", stores_new_path, class: "btn btn-primary" %>
          <%= link_to "お店を選択", select_user_path, class: "btn btn-sub-green" %>
        <% end %>
      <% end %>
    </div>
  </div>

</div>

<div class="col-md-3 col-xs-12 col-md-pull-9">
  <div class="list-group">
    <div class="list-group-item active-brown">
      記事一覧
    </div>
    <% if @posts.empty? %>
      <p class="list-group-item list-group-item-brown">記事はありません</p>
    <% end %>
    <% @posts.each do |post| %>
      <%= link_to post.title, post_path(post.id),
        class: 'list-group-item list-group-item-brown' %>
    <% end %>
  </div>
</div>

</div>

<div class="row">


<div class="col-md-3">
  <div class="panel panel-green">
    <div class="panel-heading">
      <h2 class="panel-title">プロフィール変更</h2>
    </div>
    <div class="panel-body">
      <%= link_to 'プロフィール変更', edit_user_registration_path %>
    </div>
  </div>
</div>
